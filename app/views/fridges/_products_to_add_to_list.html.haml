- if @selected_products.present?
  = link_to move_to_list_path, :class => "btn btn-primary pull-right", :remote => true, :method => :put do
    %i.glyphicon.glyphicon-send
    = "Move to grocery list"
  = link_to "Clear", fridges_path(:clear => true), :class => "btn btn-link pull-right", :remote => true
  %h5
    = "You have selected"
    = pluralize( @selected_products.count, "item" )
    = "to move to your grocery list."