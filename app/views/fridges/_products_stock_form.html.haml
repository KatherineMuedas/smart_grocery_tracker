%td{colspan: 12}
  = simple_form_for object, url: object.new_record? ? fridges_path : fridge_path(object), remote: true, html: {class: "form-horizontal"} do |f|
    = f.input :name
    = f.input :product_type
    = f.input :quantity
    = f.input :unit_measurement
    = f.input :store
    = f.input :price
    = f.input :unit_price
    = f.input :purchase_date
    = f.input :expiration_date
    = f.input :purchase_date
    = f.hidden_field :product_cycle, value: "stock"

    = f.submit "Save", class: "btn btn-primary"
    %button.btn.btn-link.cancel Cancel